# Telegram Bot Token (BotFather'dan alınacak)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# MySQL Veritabanı Ayarları
# Docker kullanıyorsanız MYSQLHOST=db olmalı, local için localhost
MYSQLHOST=db
MYSQLPORT=3306
MYSQLUSER=root
MYSQL_ROOT_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=deysis_users

# Alternatif: MySQL Connection String (MYSQL_CONNECTION_STRING varsa diğer parametreler göz ardı edilir)
# MYSQL_CONNECTION_STRING=mysql://user:password@host:port/database

# Bot Ayarları
BOT_ADMIN_ID=your_telegram_user_id_here
